# MODE
PAPER_MODE=true                 # true=papersim, false=live (don't flip until ready)

# MARKET
PRODUCT=BTC-USD
GRANULARITY=60                  # 60,300,900,3600,21600,86400
POLL_SEC=10

# RISK
START_CASH=100.0                # paper starting balance
RISK_PCT=0.01                   # 1% of equity at risk per trade
ATR_LEN=14
ATR_MULT=2.0                    # stop = entry - ATR_MULT*ATR
LOSS_STREAK_PAUSE=5             # pause after N consecutive losses
COOLDOWN_BARS=3                 # bars to wait after any exit
MIN_TRADE_USD=5.0               # minimum position notional
MAX_POSITION_USD=50.0           # cap position size (paper/live)

# SESSION GUARD
SESSION_MAX_DRAWDOWN_USD=15.0   # pause for the rest of the day if this loss is hit (paper/live)

# TELEMETRY
HEALTH_PORT=8080
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# LIVE KEYS (required only if PAPER_MODE=false)
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_API_PASSPHRASE=
